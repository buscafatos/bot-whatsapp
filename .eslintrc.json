{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": ["tsconfig.json"]
    },
    "plugins": ["@typescript-eslint/eslint-plugin"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "overrides": [],
    "rules": {
        "no-extra-semi": "error",
        "semi": "error",
        "no-return-await": "error",
        "no-useless-return": "error"
    }
}
